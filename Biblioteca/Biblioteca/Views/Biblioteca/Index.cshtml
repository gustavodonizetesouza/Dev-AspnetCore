@model IEnumerable<BibliotecaModel>

@{
    ViewData["title"] = "Biblioteca";
    
}

<style>
    .botao-direita {
        display: flex;
        justify-content: flex-end;
    }
</style>


<div class=" container">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Biblioteca</h1>
        <a class="btn btn-success mx-2 botao-direita" asp-controller="Biblioteca" asp-action="Cadastrar">Cadastrar novo Livro</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Livro</th>
                <th scope="col">Sub Título</th>
                <th scope="col">Autor</th>
                <th scope="col">Acções</th>

            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {
                @foreach (var biblioteca in Model)
                {
                    <tr>
                        <th scope="row">@biblioteca.id</th>
                        <td>@biblioteca.titulo</td>
                        <td>@biblioteca.subtitulo</td>
                        <td></td>
                        <td>
                            <a asp-controller="Biblioteca" asp-action="Visualizar" asp-route-id="@biblioteca.id" class="btn btn-info mx-2">Visualizar</a>
                            <a asp-controller="Biblioteca" asp-action="Emprestimo" asp-route-id="@biblioteca.id" class="btn btn-info mx-2">Empréstimo</a>
                            <a asp-controller="Biblioteca" asp-action="Editar" asp-route-id="@biblioteca.id" class="btn btn-warning mx-2"> Editar</a>
                            <a asp-controller="Biblioteca" asp-action="Excluir" asp-route-id="@biblioteca.id" class="btn btn-danger mx-2"> Excluir</a>
                        </td>

                    </tr>
                }
            }

        </tbody>
    </table>

</div>
