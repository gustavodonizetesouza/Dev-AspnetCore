@model IEnumerable<EmprestimosModel>

@{
    ViewData["title"] = "Lista de Emprestimos";
}

<style>
    .botao-direita {
        display: flex;
        justify-content: flex-end;
    }
</style>


<div class=" container">
        
        <div class="d-flex justify-content-between align-items-center mb-5">       
            <h1>Empréstimo</h1>    
            <a class="btn btn-success mx-2 botao-direita" asp-controller="Emprestimo" asp-action="Cadastrar">Cadastrar novo empréstimo</a>
        </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Destino</th>
                <th scope="col">Livro</th>
                <th scope="col">Data Emprestimo</th>
                <th scope="col">Acções</th>
                
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {
                @foreach (var emprestimo in Model)
                {
                    <tr>
                        <th scope="row">@emprestimo.Id</th>
                        <td>@emprestimo.Destino</td>
                        <td>@emprestimo.Livro</td>
                        <td>@emprestimo.data_emprestimo</td>
                        <td>
                            <a asp-controller="Emprestimo" asp-action="Visualizar" asp-route-id="@emprestimo.Id" class="btn btn-info mx-2"><i class="bi bi-eye"></i> Visualizar</a>
                            <a asp-controller="Emprestimo" asp-action="Editar" asp-route-id="@emprestimo.Id" class="btn btn-warning mx-2"> <i class="bi bi-pencil"></i> Editar</a>
                            <a asp-controller="Emprestimo" asp-action="Excluir" asp-route-id="@emprestimo.Id" class="btn btn-danger mx-2"> <i class="bi bi-trash"></i> Excluir</a>
                        </td>
                        
                    </tr>
                }
            }

        </tbody>
    </table>

</div>
