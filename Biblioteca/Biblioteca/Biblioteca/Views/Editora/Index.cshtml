@model IEnumerable<EditoraModel>

@{
    ViewData["title"] = "Lista de Editoras Cadastradas";
}

<style>
    .botao-direita {
        display: flex;
        justify-content: flex-end;
    }
</style>


<div class=" container">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Editoras Cadastradas</h1>
        <a class="btn btn-success mx-2 botao-direita" asp-controller="Editora" asp-action="Cadastrar">Cadastrar nova editora</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col" width="900">Nome</th>
                <th scope="col">Ações</th>

            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {
                @foreach (var cadastro in Model)
                {
                    <tr>
                        <th scope="row">@cadastro.id</th>
                        <td>@cadastro.nome</td>
                        <td>
                            <a asp-controller="Editora" asp-action="Visualizar" asp-route-id="@cadastro.id" class="btn btn-info mx-2">Visualizar</a>
                            <a asp-controller="Editora" asp-action="Editar" asp-route-id="@cadastro.id" class="btn btn-warning mx-2">Editar</a>
                            <a asp-controller="Editora" asp-action="Excluir" asp-route-id="@cadastro.id" class="btn btn-danger mx-2">Excluir</a>
                        </td>

                    </tr>
                }
            }

        </tbody>
    </table>

</div>
