@model AutorModel
@{
    ViewData["title"] = "Alterar Cadastro de Autores";
}

<style>
    .botao-direita {
        display: flex;
        justify-content: flex-end;
    }
</style>

<div class=" container">
    <div class="d-flex justify-content-between align-items-center mb-5"></div>
    <h1>Alteração do Cadastro de Autores</h1>

</div>

<form class="row g-3" method="post" asp-controller="Autor" asp-action="Editar">
    <input type="hidden" asp-for="id" />

    <div class="col-md-6">
        <label for="autor" class="form-label">Nome Autor</label>
        <input type="text" asp-for="nome" class="form-control" id="autor" placeholder="Digite o nome do autor:">
        <span class="text-danger" asp-validation-for="nome"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Alterar Autor</button>
        <a class="btn btn-danger w-20" asp-controller="Autor" asp-action="Index">Cancelar Alteração</a>
    </div>

</form>
